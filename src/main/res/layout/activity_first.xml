<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/windowBackground"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.discern.anillist.FirstActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_centerInParent="true"
        android:id="@+id/offline_view"
        android:visibility="gone"
        android:orientation="vertical"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="wrap_content"
            android:src="@drawable/ic_offline"
            android:id="@+id/offella"
            android:layout_gravity="center_horizontal"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="match_parent"
            android:textSize="15sp"
            android:textColor="@color/textPrimary"
            android:id="@+id/offText"
            android:textAlignment="center"
            android:text="Your are offline. \nPlease connect to the internet and try again"
            android:layout_height="wrap_content" />

        <Button
            android:layout_width="180dp"
            android:background="@drawable/cc"
            android:text="Retry"
            android:layout_marginTop="15dp"
            android:textColor="@color/white"
            android:id="@+id/retryButton"
            android:textAllCaps="true"
            android:layout_gravity="center_horizontal"
            android:layout_height="50dp" />

    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_centerInParent="true"
        android:gravity="center_horizontal"
        android:id="@+id/logo_view"
        android:orientation="vertical"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Anime Discovery"
            android:id="@+id/home_view"
            android:textSize="18sp"
            android:textColor="@color/textPrimary" />

        <ProgressBar
            android:layout_width="wrap_content"
            android:indeterminateDrawable="@drawable/progress_drawable"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="15dp"
            style="@android:style/Widget.ProgressBar.Small"
            android:layout_height="wrap_content" />

    </LinearLayout>



</RelativeLayout>
